            align-items: center;
            height: 100vh;
        }
        .container {
            background: rgb(255, 255, 255);
            padding: 20px;
            border-radius: 8px;
            box-shadow: 0 0 10px rgba(25, 22, 22, 0.1);
            width: 300px;
            text-align: center;
        }
        input {
            width: 80%;
            padding: 8px;
            margin-bottom: 10px;
            border: 1px solid #ccc;
            border-radius: 4px;
        }
        button {
            padding: 8px 15px;
            border: none;
            background: #3928a7;
            color: rgb(16, 26, 24);
            cursor: pointer;
            border-radius: 4px;
        }
        ul {
            list-style: none;
